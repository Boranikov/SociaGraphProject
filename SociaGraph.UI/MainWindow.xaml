<Window x:Class="SociaGraph.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SociaGraph.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="GraphCanvas" Background="White"/>
        <Grid>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10">

                <Button x:Name="btnSave" Content="JSON Kaydet" Width="100" Height="30" Margin="5" Click="btnSave_Click"/>
                <Button x:Name="btnLoad" Content="JSON Yükle" Width="100" Height="30" Margin="5" Click="btnLoad_Click"/>

            </StackPanel>
        </Grid>

    </Grid>
</Window>
