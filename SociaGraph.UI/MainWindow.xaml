<Window x:Class="SociaGraph.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SociaGraph.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="2" Margin="10">
            <Canvas x:Name="mainCanvas" 
            Background="White" 
            ClipToBounds="True"
            MouseLeftButtonDown="mainCanvas_MouseLeftButtonDown"
            MouseRightButtonDown="mainCanvas_MouseRightButtonDown"
            MouseMove="mainCanvas_MouseMove"
            MouseLeftButtonUp="mainCanvas_MouseLeftButtonUp"/>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <CheckBox x:Name="chkMoveMode" Content="Taşıma Modu (Sürükle)" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold"/>
            <Button x:Name="btnSave" Content="JSON Kaydet" Width="100" Height="30" Margin="5" Click="btnSave_Click"/>
            <Button x:Name="btnLoad" Content="JSON Yükle" Width="100" Height="30" Margin="5" Click="btnLoad_Click"/>
            <Button x:Name="btnAnalyze" Content="Analiz (Top 5)" Width="100" Height="30" Margin="5" Click="btnAnalyze_Click"/>
            <Button x:Name="btnColoring" Content="Renklendir" Width="100" Height="30" Margin="5" Click="btnColoring_Click"/>

        </StackPanel>
    </Grid>
</Window>
